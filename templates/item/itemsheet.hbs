<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </header>
    <section class="sheetbody">
        {{#if (eq item.data.type "weapon")}}
        <div class="fp flexrow">
            <table class="fp crew-roster">
                <tr>
                    <th>{{localize "FP.weapon.stat.range"}}</th>
                    <th>{{localize "FP.weapon.stat.shots"}}</th>
                    <th>{{localize "FP.weapon.stat.damage"}}</th>
                    <th>{{localize "FP.item.stat.traits"}}</th>
                </tr>
                <tr>
                    <td><input class="fp value-input" type="text" name="data.range" value="{{data.range}}" data-dtype="Number"/></td>
                    <td><input class="fp value-input" type="text" name="data.shots" value="{{data.shots}}" data-dtype="Number"/></td>
                    <td><input class="fp value-input" type="text" name="data.damage" value="{{data.damage}}" data-dtype="Number"/></td>
                    <td><input class="fp text-input" type="text" name="data.traits" value="{{data.traits}}" data-dtype="String"/></td>                
                </tr>
            </table>
        </div>
        {{/if}}

        {{!--gear sheet components--}}
        {{#if (eq item.data.type "gear")}}
        {{!--gear has Geartype, Uses, Affects--}}
         <div class="fp flexrow">
            <table class="fp crew-roster">
                <tr>
                    <th>{{localize "FP.gear.stat.uses"}}</th>
                    <th>{{localize "FP.gear.stat.affects"}}</th>
            
                </tr>
                <tr>
                    <td><input class="fp value-input" type="text" name="data.uses" value="{{data.uses}}" data-dtype="Number"/></td>
                    <td><input class="fp value-input" type="text" name="data.affects" value="{{data.affects}}" data-dtype="Number"/></td>
                  
                </tr>
            </table>
        </div>
        {{/if}}

        {{#if (eq item.data.type "crew_assignment")}}
        <div class="fp flexrow">
            <p>This creates an item to allow Crew members to be linked to Crews. Select the crew member associated with this, then drag and drop this <em>item</em> onto your Crew Sheet.</p>
            <table class="fp crew-roster">
                <tr>
                    <th>Select Associated Crew Member</th>
                </tr>
                <tr>
                    <td>
                        <select name="data.assigned_crew_actorId" id="data.assigned_crew_actorId">
                            {{#select data.assigned_crew_actorId}}
                            {{#each eligibleCrew as |ecrew id|}}
                            {{log "ecrew" ecrew}}
                            {{log "id" id}}
                            <option value="{{ecrew.eligibleId}}" {{#if (eq ecrew.eligibleId data.assigned_crew_actorId)}}selected{{/if}}>{{ecrew.eligibleName}}</option>
                            {{/each}}
                            {{/select}}    
                        </select>
                    </td>
                </tr>
            </table>
        </div>

        {{/if}}

        {{!--Common Item Traits Area--}}
        {{#unless (ne item.data.type "crew_assignment")}}
        <div class="fp flexrow">
            <table class="fp crew-roster">
                <tr>
                    <th>{{localize "FP.gameterm.notes"}}</th>
                    <th>{{localize "FP.gameterm.rules"}}</th>
                    <th>{{localize "FP.gameterm.cost"}}</th>
                </tr>
                <tr>
                    <td><input class="fp value-input" type="text" name="data.notes" value="{{data.notes}}" data-dtype="Number"/></td>
                    <td><input class="fp value-input" type="text" name="data.rules" value="{{data.rules}}" data-dtype="Number"/></td>
                    <td><input class="fp value-input" type="text" name="data.cost" value="{{data.cost}}" data-dtype="Number"/></td>
                </tr>
            </table>
        </div>
        {{/unless}}
    </section>
</form>
<form class="{{cssClass}}" autocomplete="off">
    <header class="fp sheethead">
    </header>
    
    <section class="sheetbody">
        <div class="fp flexrow">
            <div class="fp flexcol" style="border:2px solid rgb(111, 188, 252); border-radius:8px; margin:6px;">
                {{!--pic and dice links--}}
                <div class="fp flexrow">
                    <div class="fp flex-item">
                        <img class="profile-img" style="border:1px solid #44b9de; min-width:64px !important; min-height:64px !imporant" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="64" width="64"/>
                    {{!--character image column--}}
                    </div>
                    <div class="fp flex-item dice-icon">
                        <a title="Roll 1d6" class="dice-roll" data-dice-base="1d6">
                            <img class="dice-img" src="systems/fiveparsecs/assets/d6s.png" height="32" width="32" style="border:0"/>
                        </a>
                    </div>
                    <div class="fp flex-item dice-icon">
                        <a title="Roll 2d6" class="dice-roll" data-dice-base="2d6">
                            <img class="dice-img" src="systems/fiveparsecs/assets/d6.png" height="32" width="32" style="border:0"/>
                        </a>
                    </div>
                     <div class="fp flex-item dice-icon">
                        <a title="Roll 1d10" class="dice-roll" data-dice-base="1d10">
                            <img class="dice-img" src="systems/fiveparsecs/assets/d10.png" height="32" width="32" style="border:0"/>
                        </a>
                    </div>
                     <div class="fp flex-item dice-icon">
                        <a title="Roll Percentile" class="dice-roll" data-dice-base="1d100">
                            <img class="dice-img" src="systems/fiveparsecs/assets/d100.png" height="32" width="32" style="border:0"/>
                        </a>
                    </div>
                    <div class="fp flex-item dice-icon">
                        <a title="Roll Custom" class="dice-roll" data-dice-base="custom">
                            <img class="dice-img" src="systems/fiveparsecs/assets/dwhatever.png" height="32" width="32" style="border:0"/>
                        </a>
                    </div>
                </div>
                
                    <div class="flex-item" style="min-width:50%;">
                        <table class="fp crew-roster">
                            <tr class="fp sheet-label">
                                <th style="border-right:1px solid gray">{{localize "FP.gameterm.name"}}</th>
                                <th>{{localize "FP.gameterm.species"}}</th>
                            </tr>
                            <tr>
                                <td style="padding-right:3px; border-right:1px solid gray;"><input class="fp charname" style="text-align:left; width:100%; vertical-align:top; background:rgb(255, 255, 255);" name="name" type="text" value="{{actor.name}}" placeholder="Name"/></td>
                                <td style="padding-left:3px;"><input class="fp charname" style="width:100%; vertical-align:top; background:rgb(255, 255, 255);" name="data.data.species" type="text" value="{{data.data.species}}" data-dtype="String"/></td>
                            </tr>
                        </table>
                        
                        
                    </div>
                    <div class="fp flexrow">
                        <div class="fp flex-item" style="text-align:center; max-width:70%;">
                            <table class="fp crew-roster">
                                <tr class="fp sheet-label-center">
                                    <th>{{localize "FP.character.stat_abbrev.reactions"}}</th>
                                    <th>{{localize "FP.character.stat_abbrev.speed"}}</th>
                                    <th>{{localize "FP.character.stat_abbrev.combat"}}</th>
                                    <th>{{localize "FP.character.stat_abbrev.toughness"}}</th>
                                    <th>{{localize "FP.character.stat_abbrev.savvy"}}</th>
                                </tr>
                                    
                                </tr>
                                <td><input class="fp value-input" type="text" name="data.data.reactions" value="{{data.data.reactions}}" data-dtype="Number"/></td>
                            <td><input class="fp value-input" type="text" name="data.data.speed" value="{{data.data.speed}}" data-dtype="Number"/></td>
                            <td><input class="fp value-input" type="text" name="data.data.combat" value="{{data.data.combat}}" data-dtype="Number"/></td>
                            <td><input class="fp value-input" type="text" name="data.data.toughness" value="{{data.data.toughness}}" data-dtype="Number"/></td>
                            <td><input class="fp value-input" type="text" name="data.data.savvy" value="{{data.data.savvy}}" data-dtype="Number"/></td>
                            </table>
                        </div>
                        <div class="fp flex-item" style="text-align:center; max-width:28%;">
                            <table class="fp crew-roster">
                                <tr class="fp sheet-label-center">
                                    <th>{{localize "FP.character.stat.luck"}}</th>
                                    <th>{{localize "FP.character.stat.xp"}}</th>
                                </tr>
                                <tr><td><input class="fp value-input" type="text" name="data.data.luck" value="{{data.data.luck}}" data-dtype="Number"/></td>
                                <td><input class="fp value-input" type="text" name="data.data.xp" value="{{data.data.xp}}" data-dtype="Number"/></td></tr>
                            
                            </table>
                        </div>
                    </div>
                    {{!--name and stats row--}}
                
                
                   <div class="fp flexcol" style="min-width:50%">
                       
                        <div style="padding:3px; margin-right:12px;">
                            <table class="fp crew-roster" style="border-collapse:collapse;">
                                <tr class="fp sheet-label">
                                    <th>{{localize "FP.gameterm.weapon"}}</th>
                                    <th>{{localize "FP.weapon.stat.range"}}</th>
                                    <th>{{localize "FP.weapon.stat.shots"}}</th>
                                    <th>{{localize "FP.weapon.stat.damage"}}</th>
                                    <th>{{localize "FP.gear.stat.traits"}}</th>
                                </tr>
                                {{#each weapons as |weapon id|}}
                                <tr>
                                    <td>{{weapon.name}}</td>
                                    <td style="text-align:center">{{weapon.data.data.range}}</td>
                                    <td style="text-align:center">{{weapon.data.data.shots}}</td>
                                    <td style="text-align:center">{{weapon.data.data.damage}}</td>
                                    <td style="text-align:center">{{weapon.data.data.traits}}</td>
                                </tr>
                                {{/each}}
                            </table>
                        </div>
                        
                   </div> {{!--weapon 1 / gear / xp row--}}
                   <div class="fp flexcol">
                        
                        <div style="padding:3px; margin-right:12px;">
                            <table class="fp crew-roster">
                                <tr>
                                    <td style="width:10%"><span class="fp sheet-label" style="vertical-align:top">Gear</span></td>
                                    <td style="padding-left:3px;">
                                        
                                        {{#each gear as |gear id|}}
                                        
                                            <a class="item-edit item" title="Edit {{gear.name}}" data-type="gear" data-item-id="{{gear.data._id}}">{{gear.name}}
                                                {{#if (gt gear.data.data.uses 0)}}&nbsp;x{{gear.data.data.uses}}{{/if}}
                                            </a> 
                                            [<a class="item-delete item" title="Delete {{gear.name}}" data-type="gear" data-item-id="{{gear.data._id}}"><i class="fas fa-trash"></i></a>] 
                                            
                                            {{#if @last}} {{else}}, {{/if}}

                                        {{/each}}
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:10%"><span class="fp sheet-label" style="vertical-align:top">Notes</span></td>
                                    <td data-field="notes" class="inline-edit-notes" style="padding-left:3px;" contenteditable>{{data.data.notes}}</td>
                                </tr>
                            </table>
                        </div>
                   </div>
            </div>
        </div>

    </section>
</form>
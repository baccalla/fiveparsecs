<tr>
    <td class="fp sheet-label">
      {{localize "FP.campaign_turn.jobs.entity"}}<br/>
        <a class="ct-step" data-ct-phase="jobs" data-ct-action="gen-pat-job" title="{{localize 'FP.campaign_turn.jobs.activity'}}"><img class="dice-img" src="systems/fiveparsecs/assets/campaign/shaking-hands.png" height="32" width="32" style="border:0"/></a>
    </td>
    <td>
          {{#each jobs as |job id|}}
          {{log "jobs: " jobs}}
          <p><span class="fp sheet-label"><strong>{{job.name}}</strong></span> <span class="edit-icons"><a class="item-edit item" title="Edit Job" data-item-id="{{job.data._id}}"><i class="fas fa-edit"></i></a> <a class="item-delete item" title="Delete Job" data-item-id="{{job.data._id}}"><i class="fas fa-trash"></i></a></span><br/>
        <span class="fp sheet-label">{{localize "FP.ui.job.patron"}}: </span><span class="hw">{{job.data.data.patron_type}}</span><br/>
        <span class="fp sheet-label">{{localize "FP.ui.job.danger_pay"}}: </span><span class="hw">{{job.data.data.danger_pay}}</span><br/>
        <span class="fp sheet-label">{{localize "FP.ui.job.time_frame"}}: </span><span class="hw">{{job.data.data.time_frame}}</span><br/>
        <span class="fp sheet-label">{{localize "FP.ui.job.benefits"}}: </span><span class='hw'>{{job.data.data.benefits}}</span><br/>
        <span class="fp sheet-label">{{localize "FP.ui.job.hazards"}}: </span><span class='hw'>{{job.data.data.hazards}}</span><br/>
        <span class="fp sheet-label">{{localize "FP.ui.job.conditions"}}: </span><span class='hw'>{{job.data.data.conditions}}</span><br/>
        <span class="fp sheet-label">{{localize "FP.ui.job.complete"}}: </span>{{#if job.data.data.complete}}<i class="fas fa-check-square"></i>{{else}}<i class="far fa-square"></i>{{/if}}
        </p>
        {{/each}}
    </td>
</tr>
